<div id="<%= dom_id beer %>">
  <p>
    <%= link_to beer.name, beer %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <% if beer.ratings.empty? %>
    This beer has not yet been rated!
  <% else %>
    This beer has
    <%= beer.ratings.count %>
    ratings with an average of
    <%= beer.average_rating %>
  <% end %>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

</div>
